    <script type="text/javascript">

        let monthlyEarnings = <%- JSON.stringify(monthlyEarnings) %>;
        let monthlyData = [];
        monthlyData.push(['DAY','EARNINGS (TK)']);
        for(let i=0;i<monthlyEarnings.length;i++){
            let smallData = [monthlyEarnings[i].MONTH+" "+ monthlyEarnings[i].DAY,monthlyEarnings[i].TOTAL_EARNED];
            monthlyData.push(smallData);
        }

        let yearlyEarnings = <%- JSON.stringify(yearlyEarnings) %>;
        let yearlyData = [];
        yearlyData.push(['MONTH','EARNINGS (TK)']);
        for(let i=0;i<yearlyEarnings.length;i++){
            let smallData = [yearlyEarnings[i].MONTH,yearlyEarnings[i].TOTAL_EARNED];
            yearlyData.push(smallData);
        }
        console.log(yearlyEarnings);

        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = google.visualization.arrayToDataTable(monthlyData);
            var data2 = google.visualization.arrayToDataTable(yearlyData);
            var options = {
                curveType: 'function',
                legend: { position: 'bottom' }
            };

            var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));
            var chart2 = new google.visualization.LineChart(document.getElementById('curve_chart2'));

            chart.draw(data, options);
            chart2.draw(data2, options);
        }
    </script>
