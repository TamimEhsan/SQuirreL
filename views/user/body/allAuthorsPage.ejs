<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Authors</li>
    </ol>
</nav>
<div class="d-flex flex-wrap justify-content-evenly">
    <% for(let i = 0;i < authors.length;i++){%>

    <div class="card mb-1 m-1" style="width: 12rem;">
        <img class="card-img-top p-3 circular" src=<%=authors[i].IMAGE%>
        alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><%=authors[i].NAME%></h5>
            <a href=<%="/authors/"+authors[i].ID%> class="btn btn-dark">View Details</a>
        </div>
    </div>
    <% } %>
</div>
