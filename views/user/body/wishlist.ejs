<div class="row">
    <div class="col-3">
        <div class="shadow mt-3 p-2">
            <div class="row no-gutters">
                <div class="col-3">
                    <img class="circular" src="<%= user.IMAGE %>" width="50">
                </div>
                <div class="col-9">
                    <span>Hello</span>
                    <h5><%= user.NAME %></h5>
                </div>
            </div>
        </div>
        <div class="shadow mt-3 p-2">
            <div class="list-group list-group-flush">
                <a href="/my-section/profile" class="list-group-item list-group-item-action" aria-current="true">My Account</a>
                <a href="/my-section/orders" class="list-group-item list-group-item-action ">My Orders</a>
<!--                <a href="#" class="list-group-item list-group-item-action">My Lists</a>-->
                <a href="/my-section/wishlist" class="list-group-item list-group-item-action active">My Wishlist</a>
                <a href="/my-section/reviews" class="list-group-item list-group-item-action">My Ratings and Reviews</a>
            </div>
        </div>
    </div>
    <div class="col-9">
        <section class="shadow p-3 mt-3 d-flex justify-content-between">
            <h3>My Wishlist</h3>
        </section>
        <section class="shadow mt-3 p-3">
            <% for(let i = 0;i < wishList.length;i++){ %>
            <div class="row">
                <div class="col-3">
                    <img class="img-fluid img-thumbnail" style="max-width: 130px" src="<%= wishList[i].IMAGE %>"/>
                </div>
                <div class="col-9">
                    <a href=<%="/books/"+wishList[i].BOOK_ID%> class="text-decoration-none text-primary bold"><h5><%= wishList[i].BOOK_NAME %></h5></a>

                    <b><%= wishList[i].AUTHOR_NAME %></b>
                    <h5>Price: <%= wishList[i].PRICE %></h5>
                    <a href=<%= "/my-section/wishlist/remove/"+wishList[i].BOOK_ID %>   class="btn btn-outline-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-heartbreak" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M8.867 14.41c13.308-9.322 4.79-16.563.064-13.824L7 3l1.5 4-2 3L8 15a38.094 38.094 0 0 0 .867-.59Zm-.303-1.01c6.164-4.4 6.91-7.982 6.22-9.921C14.031 1.37 11.447.42 9.587 1.368L8.136 3.18l1.3 3.468a1 1 0 0 1-.104.906l-1.739 2.608.971 3.237Zm-1.25 1.137a36.027 36.027 0 0 1-1.522-1.116C-5.077 4.97 1.842-1.472 6.454.293c.314.12.618.279.904.477L5.5 3 7 7l-1.5 3 1.815 4.537Zm-2.3-3.06C.895 7.797.597 4.875 1.308 3.248c.756-1.73 2.768-2.577 4.456-2.127L4.732 2.36a1 1 0 0 0-.168.991L5.91 6.943l-1.305 2.61a1 1 0 0 0-.034.818l.442 1.106Z"/>
                    </svg>
                    Remove from wishlist
                    </a>
                </div>

            </div>
            <hr>
            <% } %>
        </section>
    </div>
</div>

